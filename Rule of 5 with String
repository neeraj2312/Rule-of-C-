// Online C++ compiler to run C++ program online
#include <iostream>
#include <bits/stdc++.h>
using namespace std;

class str{
  char *data;
  public:
  
  //constructor
  str(const char*d=""){
      data = new char[strlen(d)+1];
      strcpy(data,d);
  }
  
  //copy constructor
  str(const str&other){
      data = new char[strlen(other.data)+1];
      strcpy(data,other.data);
  }
  
  //copy assignment operator
  str &operator=(const str&other){
      if(this!=&other){
        delete []data;
        data = new char[strlen(other.data)+1];
        strcpy(data,other.data);
      }
      return *this;
  }
  
  //move constructor
  str(str&&other)noexcept:data(other.data){
      other.data = nullptr;
  }
  
  //move assignment operator 
  str &operator=(str&&other)  noexcept{
      if(this!=&other){
         delete []data;
         data = other.data;
         other.data = nullptr;
      }
      return *this;
  }
};

int main() {
    

    return 0;
}
